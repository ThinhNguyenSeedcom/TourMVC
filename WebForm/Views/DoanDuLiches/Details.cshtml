@model WebForm.DoanDuLich

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Đoàn Du Lịch</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày Khởi Hành
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKhoiHanh)
        </dd>

        <dt>
            Ngày Kết Thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>

        <dt>
            Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TourDuLich.TenGoi)
        </dd>

        <dt>
            Hành Trình
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDungTour.HanhTrinh)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaDoan }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div>
    <div>
        <h4>Chi Phí</h4>
        <div>@Html.ActionLink("Thêm chi phí", "Create", "ChiPhis")</div>

    </div>
    <table class="table">
        <tr>
            <th>
                Mã Chi Phí
            </th>
            <th>
                Tên Chi Phí
            </th>
            <th>
                Số Tiền
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.ChiPhis)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaChiPhi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiChiPhi.TenLoaiChiPhi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTien)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "ChiPhis",new { id = item.MaChiPhi.Trim() },null) |
                @Html.ActionLink("Details", "Details", "ChiPhis", new { id = item.MaChiPhi.Trim() }, null) |
                @Html.ActionLink("Delete", "Delete", "ChiPhis", new { id = item.MaChiPhi.Trim() }, null)
            </td>
        </tr>
        }
    </table>
</div>


<div>
    <div>
        <h4>Khách Hàng</h4>
        <div>@Html.ActionLink("Thêm khách hàng", "Create", "ChiTietDoans")</div>
    </div>
    <table class="table">
        <tr>
            <th>
                Mã Khách Hàng
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Số Chứng Minh Nhân Dân
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Quốc Tịch
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.ChiTietDoans)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.SoCMND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.QuocTich)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "KhachHangs",new { id = item.MaKH.Trim() },null) |
                @Html.ActionLink("Details", "Details", "KhachHangs", new { id = item.MaKH.Trim() },null) |
                @Html.ActionLink("Delete", "Delete", "KhachHangs", new { id = item.MaKH.Trim() }, null)
            </td>
        </tr>
        }
    </table>
</div>
