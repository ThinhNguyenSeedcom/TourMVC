@model WebForm.NhanVien

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Nhân viên</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Nhân Viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNV)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaNV }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h4>Đoàn Tham Dự</h4>
<div>@Html.ActionLink("Thêm đoàn và chức vụ", "Create", "PhanBoNV_Doan")</div>

<table class="table">
    <tr>
        <th>
            Đoàn Tham Dự
        </th>
        <th>
            Chức Vụ
        </th>
        <th>
            Ngày Khởi Hành
        </th>
        <th>
            Ngày Kết Thúc
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PhanBoNV_Doan)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhiemVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoanDuLich.NgayKhoiHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoanDuLich.NgayKetThuc)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "doanduliches", new { id = item.MaDoan.Trim() }, null) |
                @Html.ActionLink("Details", "Details", "doanduliches", new { id = item.MaDoan.Trim() }, null) |
                @Html.ActionLink("Delete", "Delete", "doanduliches", new { id = item.MaDoan.Trim() }, null)
            </td>
        </tr>
    }

</table>