@model IEnumerable<WebForm.KhachHang>

@{
    ViewBag.Title = "Index";
}

<h2>Khách hàng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Số chứng minh thư
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Quốc tịch
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoCMND)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuocTich)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaKH.Trim() }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaKH.Trim() }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaKH.Trim() })
        </td>
    </tr>
}

</table>
